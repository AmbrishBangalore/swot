extends layout

block content
    .quiz(ng-app="swot", ng-controller="ViewQuizCtrl")
        
        if (message != '')
            div.alert.alert-danger
                p !{message}
        alert.ng-cloak(ng-repeat="alert in alerts", type="alert.type", close="closeAlert($index)") {{alert.msg}}

        .quiz-body-container
            .header.ng-cloak(ng-hide="showingSummary")
                .prev
                    a(href="#", ng-click="prev()", ng-class="{disabled: currentQuestionIndex < 1}")
                        span.glyphicon.glyphicon-circle-arrow-left
                        | Previous
                span.current Question {{currentQuestionIndex+1}} of {{questions.length}}
                .next
                    a(href="#", ng-click="next()", ng-class="{disabled: currentQuestionIndex >= questions.length - 1}")
                        | Next
                        span.glyphicon.glyphicon-circle-arrow-right

            .question-container(ng-hide="showingSummary")

                .question.ng-cloak
                    {{currentQuestion().question}}

                .submission
                    input.form-control(type="text", ng-model="currentQuestion().submission", focus-on="switchedQuestion"
                        ui-keypress="{ 'enter': 'handleEnter($event)' }", ng-readonly="currentQuestion().submitted")
                    button.submit.btn.btn-success(type="button", ng-click="submit()", ng-disabled="!currentQuestion().submission", ng-hide="currentQuestion().submitted") Submit
                    button.next.btn.btn-primary.ng-cloak(type="button", ng-click="next()", ng-show="currentQuestion().submitted && !(isLastQuestion() && !isFinished())")
                        | {{ isLastQuestion() ? 'Finish' : 'Next' }}
                        span.glyphicon.glyphicon-circle-arrow-right

                    .result-container
                        .result.ng-cloak(ng-show="currentQuestion().submitted")
                            .alert.alert-success(ng-show="currentQuestion().isCorrect")
                                span.glyphicon.glyphicon-ok-sign
                                strong Correct!

                            .alert.alert-danger(ng-show="!currentQuestion().isCorrect")
                                strong.incorrect
                                    span.glyphicon.glyphicon-remove-sign
                                    | Incorrect!
                                | The correct answer is:&nbsp;
                                strong {{currentQuestion().correctAnswer}}

            .summary-container.ng-cloak(ng-show="showingSummary")
                h3 Summary
                span Your Score:&nbsp;
                span.score {{numCorrect()}} / {{questions.length}}
                span.score-percent ({{score()}}%)
                .summary-actions
                    button.back-to-quizzes.btn.btn-success(type="button", ng-click="exit()")
                        span.glyphicon.glyphicon-circle-arrow-left
                        | Back to Quizzes
                    button.retake.btn.btn-primary(type="button", ng-click="restart()")
                        span.glyphicon.glyphicon-refresh
                        | Retake

        #quiz-sidebar(ng-if="questions.length > 0")
            .list-group(ng-model="questions")
                a.list-group-item(href="#", ng-repeat="question in questions", ng-click="jumpToQuestion($index)", ng-class="{active: (!showingSummary && $index === currentQuestionIndex)}")
                    span.question.ellipsis {{$index+1}}. {{question.question}}
                    span.status.ng-cloak
                        span.glyphicon.correct.glyphicon-ok-sign(ng-if="question.submitted && question.isCorrect")
                        span.glyphicon.incorrect.glyphicon-remove-sign(ng-if="question.submitted && !question.isCorrect")

                a.summary.list-group-item(href="#", ng-show="isFinished()", ng-click="finish()", ng-class="{active: showingSummary}") Summary

                .list-group-item.progress-container(tooltip-html-unsafe="{{getScoreTooltip()}}", tooltip-placement="bottom")
                    progress
                        bar(type="success", value="numCorrect()/questions.length*100")
                        bar(type="danger", value="numIncorrect()/questions.length*100")


block scripts
    script.
        var _quizId = '!{quizId}';
    script(src="/app/quiz/quiz.js")
    script(src="/app/quiz/view.js")
